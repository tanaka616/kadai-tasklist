<h1>id: <%= @task.id %> のタスク編集ページ</h1>

<%= render 'form', task: @task %>


<% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>